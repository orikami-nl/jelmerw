<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(ford) -%>">
  <span class='title'>
    <%= ford.naam %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), ford_path(ford),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_ford_path(ford),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_ford_path(ford),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => ford.naam),
        :method => :delete %>
  </span>
</li>
