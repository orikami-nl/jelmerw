<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(mazda) -%>">
  <span class='title'>
    <%= mazda.naam %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), mazda_path(mazda),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_mazda_path(mazda),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_mazda_path(mazda),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => mazda.naam),
        :method => :delete %>
  </span>
</li>
