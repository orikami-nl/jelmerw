<ul>
  <% if Admin::VwsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_vws_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_vw_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::VwsController.sortable? and Vw.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Vws"),
                 admin_vws_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Vws"),
                 admin_vws_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>