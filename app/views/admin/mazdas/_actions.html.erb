<ul>
  <% if Admin::MazdasController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_mazdas_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_mazda_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::MazdasController.sortable? and Mazda.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Mazdas"),
                 admin_mazdas_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Mazdas"),
                 admin_mazdas_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>