<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(volvo) -%>">
  <span class='title'>
    <%= volvo.naam %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), volvo_path(volvo),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_volvo_path(volvo),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_volvo_path(volvo),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => volvo.naam),
        :method => :delete %>
  </span>
</li>
